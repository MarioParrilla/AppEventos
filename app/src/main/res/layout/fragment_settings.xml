<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_viewb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <TextView
        android:id="@+id/lblAcerdaDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_info_24"
        android:minHeight="48dp"
        android:onClick="infoAcercaDe"
        android:text="Acerca De"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_viewb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/lblCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:drawableStart="@drawable/ic_logout_24"
        android:minHeight="48dp"
        android:text="Cerrar Sesion"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_viewb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAcerdaDe"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/lblSoporte"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:drawableStart="@drawable/ic_chat_24"
        android:minHeight="48dp"
        android:text="Soporte"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_viewb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCerrarSesion"
        app:layout_constraintVertical_bias="0.050000012" />

</androidx.constraintlayout.widget.ConstraintLayout>